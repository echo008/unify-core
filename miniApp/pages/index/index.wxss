/* 微信小程序Hello World示例样式 */

.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 64rpx;
  font-weight: bold;
  color: #1976d2;
  margin-bottom: 40rpx;
}

.welcome-card {
  width: 90%;
  padding: 48rpx;
  background-color: rgba(25, 118, 210, 0.1);
  border-radius: 32rpx;
  margin-bottom: 48rpx;
  text-align: center;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.welcome-desc {
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

.counter-card {
  width: 90%;
  padding: 48rpx;
  background-color: white;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 48rpx;
  text-align: center;
}

.counter-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 32rpx;
}

.counter-value {
  font-size: 96rpx;
  font-weight: bold;
  color: #1976d2;
  display: block;
  margin-bottom: 40rpx;
}

.counter-buttons {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 32rpx;
}

.counter-btn {
  width: 120rpx;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 2rpx solid #ddd;
  background-color: white;
  color: #333;
}

.counter-btn.primary {
  background-color: #1976d2;
  color: white;
  border-color: #1976d2;
}

.counter-btn[disabled] {
  opacity: 0.5;
}

.language-card {
  width: 90%;
  padding: 48rpx;
  background-color: white;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 48rpx;
  text-align: center;
}

.language-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 32rpx;
}

.language-buttons {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
}

.language-btn {
  width: 160rpx;
  height: 72rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 2rpx solid #ddd;
  background-color: rgba(128, 128, 128, 0.3);
  color: #333;
}

.language-btn.active {
  background-color: #1976d2;
  color: white;
  border-color: #1976d2;
}

.framework-info {
  font-size: 24rpx;
  color: #999;
  margin-top: 32rpx;
  text-align: center;
}
